{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*", "./dist/*"]
    },
    "types": ["unplugin-icons/types/react"]
  },
  "exclude": [
    "test",
    "node_modules",
    "release/app/node_modules",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ]
}
